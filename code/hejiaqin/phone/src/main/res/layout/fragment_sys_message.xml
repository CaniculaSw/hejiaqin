<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/more_sys_msg_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:background="@color/clear_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/title_icon_back_nor"
                android:visibility="visible" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/more_sys_msg_miss_call_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/more_sys_msg_miss_call_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/more_sys_msg_miss_call"
                android:textColor="@color/more_sys_msg_navigator_text_selected"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/more_sys_msg_miss_call_iv"
                android:layout_width="54dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@color/more_sys_msg_navigator_text_selected" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/more_sys_msg_sys_message_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/more_sys_msg_sys_message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/more_sys_msg_sys_message"
                android:textColor="@color/more_sys_msg_navigator_text_unselected"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/more_sys_msg_sys_message_iv"
                android:layout_width="54dp"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:background="@color/more_sys_msg_navigator_text_selected"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/more_sys_msg_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/more_edit"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/more_msg_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>