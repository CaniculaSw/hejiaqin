<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/more_white_f4f4f4"
    tools:context="com.chinamobile.hejiaqin.business.ui.contact.fragment.AppContactListFragment">

    <com.chinamobile.hejiaqin.business.ui.basic.view.stickylistview.StickyListHeadersListView
        android:id="@+id/sys_message_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:drawSelectorOnTop="true"
        android:fastScrollEnabled="true"
        android:overScrollMode="never"
        android:padding="0dp"
        android:scrollbarStyle="outsideOverlay" />
<TextView
    android:id="@+id/sys_message_list_delete"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:clickable="true"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:background="@color/white"
    android:textSize="16sp"
    android:textColor="@color/more_black_404040"
    android:text="@string/more_msg_delete"
    android:visibility="gone"/>
</FrameLayout>