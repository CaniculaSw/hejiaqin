<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="238dp"
    android:id="@+id/more_bind_tv_dialog_ll"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/more_bind_tv_dialog_choose_bind_method"
        android:textColor="@color/more_text_gray_9a9a9a"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/more_sep_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/more_bind_tv_dialog_scan"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/more_bind_tv_dialog_by_scan"
        android:textColor="@color/more_black_404040"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/more_sep_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/more_bind_tv_dialog_input"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/more_bind_tv_dialog_by_input"
        android:textColor="@color/more_black_404040"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/more_sep_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/more_bind_tv_dialog_contact"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/more_bind_tv_dialog_by_contact"
        android:textColor="@color/more_black_404040"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/more_white_f4f4f4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/more_bind_tv_dialog_cancle"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/more_cancel"
        android:textColor="@color/more_black_404040"
        android:textSize="16sp" />
</LinearLayout>
