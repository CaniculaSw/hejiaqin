<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contact_list_head_bg_color">

    <com.chinamobile.hejiaqin.business.ui.basic.view.HeaderView
        android:id="@+id/more_input_contact_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/more_input_contact_head_layout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@+id/more_input_contact_title"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/contact_head_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/contact_modify_head_text"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/contact_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/contact_photo_default" />

    </RelativeLayout>

    <include
        layout="@layout/layout_progress_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_input_contact_title" />

    <RelativeLayout
        android:id="@+id/more_input_contact_name_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/more_input_contact_head_layout"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/more_input_contact_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/contact_modify_name_text"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/right_btn" />

        <EditText
            android:id="@+id/more_input_contact_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/more_input_contact_name_text"
            android:background="@null"
            android:hint="@string/contact_modify_name_hint_text"
            android:singleLine="true"
            android:textColor="@color/more_black_404040"
            android:textColorHint="@color/contact_list_search_text_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_input_contact_number_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/more_input_contact_name_layout"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/more_input_contact_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/contact_modify_number_text"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/more_input_contact_number_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/more_input_contact_number_text"
            android:background="@null"
            android:hint="@string/contact_modify_number_hint_text"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/more_black_404040"
            android:textColorHint="@color/contact_list_search_text_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/right_btn" />

    </RelativeLayout>

</RelativeLayout>
