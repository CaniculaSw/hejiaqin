<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinamobile.hejiaqin">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 访问联系人的权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:windowSoftInputMode="adjustPan">
        <activity
            android:name=".business.ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 登录、注册相关 -->
        <activity
            android:name=".business.ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".business.ui.login.RegisterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".business.ui.login.RegisterDetailActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".business.ui.login.RegisterInterestActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".business.ui.login.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <!-- 登录后的主页 -->
        <activity
            android:name=".business.ui.main.MainFragmentActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".business.ui.contact.ContactInfoActivity" />
        <activity android:name=".business.ui.contact.ModifyContactActivity" />
        <activity android:name=".business.ui.contact.InputInfoActivity"></activity>
        <activity android:name=".business.ui.more.MoreFunActivity"></activity>
        <activity android:name=".business.ui.more.ShareAppActivity"></activity>
        <activity android:name=".business.ui.more.MoreMessageActivity"></activity>
        <activity android:name=".business.ui.more.AboutActivity"></activity>
        <activity android:name=".business.ui.more.SysMessageDetailActivity"></activity>
    </application>

</manifest>