<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollIndicators="none">

    <com.chinamobile.hejiaqin.business.ui.basic.view.HeaderView
        android:id="@+id/system_message_detail_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollIndicators="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/sys_message_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/more_black_404040"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/sys_message_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/more_text_gray_9a9a9a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sys_message_detail_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/more_black_404040"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>