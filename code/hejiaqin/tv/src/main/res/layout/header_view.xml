<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="fill_parent"
    android:layout_height="43dp"
    android:focusable="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:focusable="false"
        android:gravity="center">

        <TextView
            android:id="@+id/headertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/header_title_margin"
            android:layout_marginRight="@dimen/header_title_margin"
            android:gravity="center"
            android:text="title"
            android:focusable="false"
            android:textColor="@color/white"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setadd"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/item_click_style"
        android:gravity="center"
        android:focusable="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/right_imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="rightfun"
            android:textColor="@color/white"
            android:focusable="false"
            android:textSize="28sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:focusable="false"
        android:background="@color/clear_color"
        android:textSize="@dimen/normal_font"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/back_iv"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:focusable="false"
        android:background="@color/clear_color"
        android:textSize="@dimen/normal_font"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:focusable="false"
        android:layout_marginBottom="18.5dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerCrop"
        android:visibility="visible" />

</RelativeLayout>