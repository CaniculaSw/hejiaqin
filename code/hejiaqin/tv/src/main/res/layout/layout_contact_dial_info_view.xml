<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="482dp"
    android:layout_height="67dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dial_info_layout"
        android:layout_width="482dp"
        android:layout_height="67dp"
        android:background="@drawable/adapter_contact_list_item_bg"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/dial_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_missed_call" />

        <TextView
            android:id="@+id/dial_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/dial_type_icon"
            android:text="@string/contact_info_dial_incoming_text"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/dial_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="15:30"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dial_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="18分20秒"
            android:textColor="@color/contact_list_username_text_color"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="482dp"
        android:layout_height="10dp"
        android:layout_below="@+id/dial_info_layout" />
</RelativeLayout>