<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">


    <com.chinamobile.hejiaqin.business.ui.basic.view.HeaderView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yes"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_setting_bg"
                android:nextFocusDown="@+id/yes"
                android:nextFocusRight="@+id/no"
                android:nextFocusUp="@+id/yes"
                android:text="@string/yes"
                android:textColor="@color/white"
                android:textSize="20sp">

                <requestFocus />
            </Button>

            <Button
                android:id="@+id/no"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_setting_bg"
                android:nextFocusDown="@+id/no"
                android:nextFocusLeft="@+id/yes"
                android:nextFocusRight="@+id/no"
                android:nextFocusUp="@+id/no"
                android:text="@string/no"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
