<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/main_nav"
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:background="@color/navigator_bg"
        android:focusable="true"
        android:nextFocusRight="@+id/content_left"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:focusable="false"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo_nav" />

        <RelativeLayout
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/recent_layout"
                android:layout_width="200px"
                android:layout_height="100px"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusDown="@+id/contact_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recent_image"
                    android:layout_width="@dimen/main_navigation_contact_image_width"
                    android:layout_height="@dimen/main_navigation_contact_image_height"
                    android:layout_marginTop="@dimen/main_navigation_image_margin_top"
                    android:background="@mipmap/recent_nav" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_layout"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_below="@+id/recent_layout"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusDown="@+id/dial_layout"
                android:nextFocusUp="@+id/recent_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/contact_image"
                    android:layout_width="@dimen/main_navigation_contact_image_width"
                    android:layout_height="@dimen/main_navigation_contact_image_height"
                    android:layout_marginTop="@dimen/main_navigation_image_margin_top"
                    android:background="@mipmap/contact_nav" />

                <requestFocus />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dial_layout"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_below="@+id/contact_layout"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusDown="@+id/more_layout"
                android:nextFocusUp="@+id/contact_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dial_image"
                    android:layout_width="@dimen/main_navigation_dial_image_width"
                    android:layout_height="@dimen/main_navigation_dial_image_height"
                    android:layout_marginTop="@dimen/main_navigation_image_margin_top"
                    android:background="@mipmap/dial_nav" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/more_layout"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_below="@+id/dial_layout"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusUp="@+id/dial_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/more_image"
                    android:layout_width="@dimen/main_navigation_more_image_width"
                    android:layout_height="@dimen/main_navigation_more_image_height"
                    android:layout_marginTop="@dimen/main_navigation_image_margin_top"
                    android:background="@mipmap/setting_nav" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false"
        android:nextFocusLeft="@+id/main_nav"
        android:nextFocusRight="@+id/content_right"></FrameLayout>

    <FrameLayout
        android:id="@+id/content_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:focusable="false"
        android:nextFocusLeft="@+id/content_left"></FrameLayout>

</LinearLayout>

