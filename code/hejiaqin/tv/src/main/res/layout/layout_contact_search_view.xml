<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/contact_search_layout"
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_search_img"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/contact_search_icon" />
        <TextView
            android:id="@+id/contact_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/contact_search_img"
            android:layout_marginLeft="4dp"
            android:textColor="@color/contact_list_search_text_color"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_below="@+id/contact_head_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/contact_list_divider_bg_color" />

</RelativeLayout>