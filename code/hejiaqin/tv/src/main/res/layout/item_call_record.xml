<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_marginTop="10dp"
    android:focusable="true"
    android:background="@drawable/selector_common_bg">

        <LinearLayout
            android:id="@+id/call_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/call_photo_iv"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/contact_photo_default"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/call_photo_layout"
            android:layout_marginLeft="18dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/call_record_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="张晓晓"
                android:color="@color/call_record_name_color"/>
            <TextView
                android:id="@+id/call_record_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:text="13456789012"
                android:color="@color/call_record_name_color"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/call_record_type_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">
            <ImageView
                android:id="@+id/call_record_type_iv"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@mipmap/icon_outbound_call"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/call_record_type_layout">
            <TextView
                android:id="@+id/call_record_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="15:38"
                android:textSize="22sp"
                android:textColor="@color/call_record_time_color"/>
        </LinearLayout>

</RelativeLayout>