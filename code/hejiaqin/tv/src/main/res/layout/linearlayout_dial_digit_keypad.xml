<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/key_one"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false"/>

        <Button
            android:id="@+id/key_two"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/key_three"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/key_four"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/key_five"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/key_six"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/key_seven"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/key_eight"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />

        <Button
            android:id="@+id/key_nine"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/key_asterisk"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false"/>

        <Button
            android:id="@+id/key_zero"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false"/>

        <Button
            android:id="@+id/key_dot"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="#"
            android:textColor="@color/keypad_text_color"
            android:background="@drawable/selector_common_bg"
            android:contentDescription="@null"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>

</LinearLayout>