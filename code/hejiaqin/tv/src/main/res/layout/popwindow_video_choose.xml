<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_in_dialog">

    <LinearLayout
        android:layout_width="650dp"
        android:layout_height="480dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/video_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/video_choose_app_layout"
            android:layout_width="454dp"
            android:layout_height="94dp"
            android:background="@drawable/selector_setting_bg"
            android:nextFocusLeft="@+id/video_choose_app_layout"
            android:nextFocusRight="@+id/video_choose_app_layout"
            android:nextFocusUp="@+id/video_choose_app_layout"
            android:focusable="true">

            <Button
                android:layout_width="442dp"
                android:layout_height="82dp"
                android:layout_centerInParent="true"
                android:background="@drawable/contact_list_item_bg"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/video_choose_app"
                android:textColor="@color/contact_list_username_text_color"
                android:textSize="18sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/video_choose_volte_layout"
            android:layout_width="454dp"
            android:layout_height="94dp"
            android:layout_below="@+id/video_choose_app_layout"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_setting_bg"
            android:nextFocusLeft="@+id/video_choose_volte_layout"
            android:nextFocusRight="@+id/video_choose_volte_layout"
            android:focusable="true">

            <Button
                android:layout_width="442dp"
                android:layout_height="82dp"
                android:layout_centerInParent="true"
                android:background="@drawable/contact_list_item_bg"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/video_choose_volte"
                android:textColor="@color/contact_list_username_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/video_choose_cancel_layout"
            android:layout_width="454dp"
            android:layout_height="94dp"
            android:layout_below="@+id/video_choose_volte_layout"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_setting_bg"
            android:nextFocusLeft="@+id/video_choose_cancel_layout"
            android:nextFocusRight="@+id/video_choose_cancel_layout"
            android:nextFocusDown="@+id/video_choose_cancel_layout"
            android:focusable="true">

            <Button
                android:layout_width="442dp"
                android:layout_height="82dp"
                android:layout_centerInParent="true"
                android:background="@drawable/contact_list_item_bg"
                android:focusable="false"
                android:gravity="center"
                android:text="@string/video_choose_cancel"
                android:textColor="@color/contact_list_username_text_color"
                android:textSize="18sp" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>