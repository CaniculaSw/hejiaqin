<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chinamobile.hejiaqin.business.ui.basic.view.HeaderView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" />

    <RelativeLayout
        android:id="@+id/normal_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="120dp">

        <TextView
            android:id="@+id/desc1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/check_mic_desc1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc1"
            android:layout_centerHorizontal="true"
            android:text="@string/check_mic_desc2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/start_ll"
            android:layout_width="496dp"
            android:layout_height="80dp"
            android:layout_below="@+id/desc2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/selector_setting_bg"
            android:focusable="true"
            android:gravity="center"
            android:nextFocusDown="@+id/start_ll"
            android:nextFocusForward="@+id/start_ll"
            android:nextFocusRight="@+id/start_ll"
            android:nextFocusUp="@+id/start_ll">

            <requestFocus />

            <TextView
                android:layout_width="481dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_bg_normal"
                android:gravity="center"
                android:text="@string/start_test"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/result_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/result_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_nomal" />

        <TextView
            android:id="@+id/result_tips_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/mic_normal_line1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/result_tips_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_tips_line1"
            android:layout_centerHorizontal="true"
            android:text="@string/mic_normal_line2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/done_test_again_btn_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_tips_line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_test_again"
                android:layout_width="235dp"
                android:layout_height="80dp"
                android:background="@drawable/selector_setting_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusDown="@+id/btn_test_again"
                android:nextFocusLeft="@+id/btn_test_again"
                android:nextFocusRight="@+id/btn_done"
                android:nextFocusUp="@+id/btn_test_again">

                <requestFocus />

                <LinearLayout
                    android:id="@+id/btn_test_again_ll"
                    android:layout_width="220dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg_normal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_test_again_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_again"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_done"
                android:layout_width="235dp"
                android:layout_height="80dp"
                android:background="@drawable/selector_setting_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:nextFocusDown="@+id/btn_done"
                android:nextFocusLeft="@+id/btn_test_again"
                android:nextFocusRight="@+id/btn_done"
                android:nextFocusUp="@+id/btn_done">

                <LinearLayout
                    android:id="@+id/btn_done_ll"
                    android:layout_width="220dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg_normal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_done_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/done"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
